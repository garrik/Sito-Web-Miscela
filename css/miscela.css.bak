a, a:link, a:hover, a:visited, a:active { color: #000; }
.reserved { text-align: right; }
.splash a { 
    display: block;
    margin: 0 auto;    
    width: 800px;
}
.header .nav, .header .nav li {
    list-style-type: none;
    float: left;
}
.header .nav {
    border-bottom: 2px solid black;
    line-height: 1.5;
    margin-left: 0;
    margin-right: 0;
    padding-top: 4.5em;
    width: 100%;
}
.header .nav li {
    background: url("../img/slash.png") no-repeat -5px 0;
    margin-left: 42px;
    text-transform: uppercase;
    width: 100px;
}
.header .nav a {
    color: Black;
    margin-left: 1em;
    text-decoration: none;
}
.header .nav a:after {
    content: " ///";
}
.header .nav a:hover {
    color: #da0019;
}
.header .nav .selected a {
    color: #da0019;
}
.header .nav .selected {
    background: none;
}

.area {
    border-style: solid;
    border-width: 4px;
    border-left: 0 none;
    border-right: 0 none;
    border-top: 0 none;
    color: White;
    font-size: 1.2em;
    margin-bottom: 0.5em;
    padding-bottom: 1px;
    text-indent: 0.5em;
    text-transform: uppercase;
}

