.home .article img { width: 100%; }
.about .article img, .crew .article img, .left { 
    margin: 0 1em 1em 0;
    float: left; 
}
.about .main .article { background: url(../img/about/logo.png) no-repeat 0 2em; }
.about .main .article p { min-height: 384px; }
.about .spacer {
    clear: left;
    float: left;
    min-width: 100px;
}
.spacer.dim1 { height: 15px; width: 250px; }
.spacer.dim2 { height: 18px; width: 250px; }
.spacer.dim3 { height: 15px; width: 250px; }
.spacer.dim4 { height: 18px; width: 290px; }
.spacer.dim5 { height: 15px; width: 280px; }
.spacer.dim6 { height: 18px; width: 270px; }
.spacer.dim7 { height: 18px; width: 280px; }
.spacer.dim8 { height: 18px; width: 290px; }
.spacer.dim9 { height: 70px; width: 300px; }
.spacer.dim10 { height: 40px; width: 290px; }
.spacer.dim11 { height: 46px; width: 270px; }
.spacer.dim12 { height: 70px; width: 160px; }

.where h3 { margin-top: 1em; }
.where .article img, .right { 
    margin: 0 0 1em 1em;
    float: right; 
}
/*gallery*/
.gallery #main_image { text-align: center; }
.gallery #main_image .caption { font-style: italic; }
.gallery .galleria { 
    margin: 1em 5px 1em;
    width: 100%; 
}
.gallery .galleria li { border: 3px solid silver; }
.gallery .gallery .nav { 
    clear: left;
    padding-bottom: 1em;
    text-align: center; 
}
.gallery .gallery .nav a { 
    text-decoration: none;
}

.footer { 
    background-color: Black; 
    position: relative;
}
.footer, .footer a, footer a:hover, .footer a:active,
.footer a:visited, .footer a:link { color: White; }
.footer ul, .footer li {
    display: inline;
    list-style-type: none;
}
.footer .reference {
    margin: 0 0 0 0.5em;
}
.footer .info {
    position: absolute;
    margin: 0;
    right: 0.5em;
}
.footer li:before {
	content: "| ";
}
.footer li:first-child:before {
	content: "";
}
/* general purpose */
.hidden { display: none; }