.aside .area {
    background: url(../img/highlight.png) no-repeat;
    border-color: Black;
	line-height: 1.5;
}
.aside .article { 
    border-bottom: 1px solid black;
    margin: 0.5em 0;
}
.aside .placeholder {
    background-color: Silver;
    min-height: 90px;
}
.aside h5 {
    border-bottom: 3px solid Black;
    margin: -2.5em 0.5em 1.25em;
    text-align: center;
}
.aside p { 
    font-size: 80%; 
    margin-bottom: 0.5em;
}

.main .article:first-child { margin-bottom: 1.5em; }
.main .article:first-child .area {
    background: url(../img/redhighlight.png) no-repeat;
    border-color: #da0019;
}
.main .area {
    background: url(../img/greyhighlight.png) no-repeat;
    border-color: #bec0c2;
}
